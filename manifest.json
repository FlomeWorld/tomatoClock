{
  "manifest_version": 3,
  "name": "TomatoFocus - AI Focus Timer",
  "version": "1.0.0",
  "description": "A Pomodoro-style timer that blocks distractions and provides AI motivation.",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "TomatoFocus"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}